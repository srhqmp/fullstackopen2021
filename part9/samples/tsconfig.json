// makes it mandatory to have types for all variables used

{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"],
    "target": "ES2020",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
  }
}
